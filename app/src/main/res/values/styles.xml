<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="sortMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@android:color/holo_red_light</item>
    </style>

    <style name="RoundButton1">
        <item name="android:shape">oval</item>
        <item name="android:backgroundTint">@color/colorButton</item>
    </style>

    <style name="RoundButton2">
        <item name="android:shape">oval</item>
        <item name="android:backgroundTint">@color/colorButton2</item>
    </style>

    <style name="RoundButton3">
        <item name="android:shape">oval</item>
        <item name="android:backgroundTint">@color/colorButton3</item>
    </style>

    <style name="RoundButton4">
        <item name="android:shape">oval</item>
        <item name="android:backgroundTint">@color/colorButton4</item>
    </style>

    <style name="NewsButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fadingEdgeLength">10px</item>
        <item name="android:paddingLeft">50px</item>
        <item name="android:paddingTop">25px</item>
        <item name="android:paddingRight">50px</item>
        <item name="android:paddingBottom">25px</item>
        <item name="android:shape">rectangle</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:strokeWidth">10</item>
        <item name="android:strokeColor">@color/colorBackground</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="NewsSourceButton">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


</resources>
