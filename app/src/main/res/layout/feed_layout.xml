<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    tools:context=".MainActivity">-->

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></LinearLayout>
    </ScrollView>

    <!--    author: Yusen Wei-->
    <!--    these linear layout group generate the menu bar-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="44dp"
        android:layout_row="0"
        android:layout_column="1"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:background="@drawable/rounded_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="returnHome"
            android:src="@drawable/ic_home_32px"
            android:tint="@color/tw__composer_white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonFavorites"
            android:background="@drawable/rounded_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="openFavourites"
            android:src="@drawable/ic_star_white_24dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonAdd"
            android:background="@drawable/rounded_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="addSitePage"
            android:src="@drawable/ic_rss_feed"
            android:tint="@color/tw__composer_white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonSearch"
            android:background="@drawable/rounded_button2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ic_search_32px"
            android:tint="@color/tw__composer_white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonSort"
            android:background="@drawable/rounded_button2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="4"
            android:src="@drawable/ic_sort"
            android:tint="@color/tw__composer_white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!--
        <ImageButton
            android:id="@+id/imageButtonRefresh"
            android:background="@drawable/rounded_button2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="5"
            android:src="@drawable/ic_refresh"
            android:tag="imageButtonRefreshInFeedLayout"
            android:tint="@color/tw__composer_white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />-->

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
