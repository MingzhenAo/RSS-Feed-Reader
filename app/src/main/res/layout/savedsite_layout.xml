<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/imageButton"
            android:onClick="returnHome"
            app:layout_constraintTop_toTopOf="@+id/button4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" app:layout_constraintBottom_toBottomOf="@+id/button4"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="addSitePage"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="454dp"
            android:id="@+id/tableLayout" app:layout_constraintTop_toBottomOf="@+id/button4"
            android:layout_marginBottom="97dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.469">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>
    <TextView
            android:text="BBC"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/textView2"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="19dp" android:layout_marginRight="19dp"/>
    <CheckBox
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2" style="?android:attr/checkboxStyle"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" app:layout_constraintEnd_toEndOf="@+id/tableLayout"/>
</android.support.constraint.ConstraintLayout>