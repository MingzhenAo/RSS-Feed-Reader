<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </WebView>

    <!--    author: Yusen Wei-->
    <!--    these linear layout group generate the menu bar-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="44dp"
        android:layout_row="0"
        android:layout_column="1"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonHome"
            android:background="@drawable/rounded_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="returnHome"
            android:src="@drawable/ic_home_32px"
            android:tint="@color/tw__composer_white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonFavorites"
            android:background="@drawable/rounded_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="openFavourites"
            android:src="@drawable/ic_star_white_24dp" />


        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonAdd"
            android:background="@drawable/rounded_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="addSitePage"
            android:src="@drawable/ic_add_32px"
            android:tint="@color/tw__composer_white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonShare"
            android:background="@drawable/rounded_button2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="4"
            app:srcCompat="@drawable/ic_file_upload" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButtonLike"
            android:background="@drawable/rounded_button2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="5"
            app:srcCompat="@drawable/heartemptywhite" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>